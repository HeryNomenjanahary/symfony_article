{% extends "base.html.twig" %}

{% block title property.title %}

{% block body %}
    <div class='jumbotron'>
        <div class='container'>
            <div class='row'>
                <div class='col-md-8'>
                
                </div>
                <div class='col-md-4'>
                    <h2> {{property.title}} </h2>
                    <h5> {{property.rooms}} pièces - {{property.surface}} m<sup>2</sup>  </h5>
                    <div class='text-success'> {{property.formattedPrice}} £ </div>
                    <a href='' class='btn btn-success'> Contacter l'agence </a>
                </div>
            </div>
        </div>
    </div>
    <div class='container mt-4'>
        <p> 
            {{property.description | nl2br }}
        </p>
        <div class='row'>
            <div class='col-md-8'>
                <h4> Caracteristique </h4>
                <table class='table table-striped table-bordered'>
                    <tr>
                        <td> Surface habitable </td>
                        <td> {{property.surface}} m<sup>2</sup> </td>
                    </tr>
                    <tr>
                        <td> Pièces </td>
                        <td> {{property.rooms}} </td>
                    </tr>
                    <tr>
                        <td> Chambre </td>
                        <td> {{property.bedrooms}} </td>
                    </tr>
                    <tr>
                        <td> Etage </td>
                        <td> {{property.floor}} </td>
                    </tr>
                    <tr>
                        <td> Chauffage </td>
                        <td> {{property.heatType}}</td>
                    </tr>
                </table>
            </div>
            <div class='col-md-4'>
                
            </div>
        </div>
    </div>
{% endblock %}